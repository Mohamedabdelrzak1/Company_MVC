@model ForgetPasswordDto

@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="signup-form">
    <p class="text-muted mb-4">
        Please enter your email address to search for your account.
    </p> 

    <!-- Validation Summary -->
    <div asp-validation-summary="All" class="my-validation-error mb-3"></div>

    <!-- Form -->
    <form asp-action="SendResetPasswordUrl">
        <!-- Email input -->
        <div class="mb-3">
            <input asp-for="Email" placeholder="Enter your email" class="form-control" />
            <span asp-validation-for="Email" class="my-validation-error"></span>
        </div>

        <!-- Submit button -->
        <button type="submit" class="reset-btn">
            <span class="btn-icon"><i class="fas fa-paper-plane"></i></span>
            <span class="btn-text">Send Reset</span>
        </button>

    </form>

    <!-- Login redirect -->
    <p class="mt-3 text-center fw-bold text-dark fs-5">
        Already have an account? <a href="/Account/SignIn" class="login-link">Login Now</a>
    </p>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<style>
  
    .reset-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        padding: 12px 24px;
        background: linear-gradient(to right, #0d6efd, #1e90ff); /* أزرق تدرجي */
        color: #fff;
        font-size: 16px;
        font-weight: 800;
        border: none;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
        transition: all 0.3s ease;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .reset-btn:hover {
            background: linear-gradient(to right, #0b5ed7, #1c86ee);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(13, 110, 253, 0.4);
        }

        .reset-btn:active {
            transform: scale(0.97);
            box-shadow: 0 4px 10px rgba(13, 110, 253, 0.2);
        }

    .btn-icon {
        font-size: 18px;
    }

    .btn-text {
        font-size: 16px;
    }

    .login-link {
        color: #0056d2; /* أزرق أقوى من Bootstrap */
        font-weight: 800; /* Bold جداً */
        text-decoration: none;
    }

        .login-link:hover {
            color: #003f9e; /* غامق عند الهوفر */
            text-decoration: underline;
        }

    </style>