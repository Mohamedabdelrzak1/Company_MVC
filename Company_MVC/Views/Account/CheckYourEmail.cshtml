@{
   
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="pro-container">
    <div class="pro-box">
        <div class="icon-wrapper">
            📬
        </div>
        <h1 class="main-title">Check Your Email</h1>
        <p class="sub-text">We've sent a confirmation link to your email address.</p>
        <a href="https://mail.google.com" target="_blank" class="pro-btn">Open Gmail</a>
        <p class="footnote">Didn’t receive the email? Check your spam folder.</p>
    </div>
</div>


    <style>
        .pro-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background: linear-gradient(to right, #f8f8f8, #fdfdfd);
        }

        .pro-box {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
            padding: 60px 40px;
            text-align: center;
            width: 90%;
            max-width: 500px;
            animation: fadeIn 0.8s ease-out;
        }

        .icon-wrapper {
            font-size: 70px;
            animation: bounce 2s infinite;
        }

        .main-title {
            font-size: 36px;
            font-weight: 800;
            margin: 20px 0 10px;
            color: #333;
        }

        .sub-text {
            font-size: 18px;
            color: #555;
            margin-bottom: 30px;
        }

        .pro-btn {
            background-color: #007bff;
            color: white;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
            transition: 0.3s ease;
        }

            .pro-btn:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }

        .footnote {
            font-size: 13px;
            color: #999;
            margin-top: 30px;
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100%

        {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-15px);
        }

        60% {
            transform: translateY(-8px);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }
    </style>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
