@{
    ViewData["Title"] = "System Overview";
}

<section class="container my-5">
    <h2 class="text-white text-center mb-5">Explore Our System</h2>

    <div class="row justify-content-center">
        <!-- Department Card -->
        <div class="col-md-5 mb-4">
            <div class="card bg-dark text-white border-0 shadow-lg rounded-4 h-100 hover-effect">
                <div class="card-body text-center p-5">
                    <i class="bi bi-diagram-3-fill display-3 text-info mb-4"></i>
                    <h4 class="card-title mb-3">Departments</h4>
                    <p class="card-text">Manage and view all departments in your organization.</p>
                    <a href="/Department/Index" class="btn btn-outline-info rounded-pill mt-3 px-4 py-2">Go to Departments</a>
                </div>
            </div>
        </div>

        <!-- Employee Card -->
        <div class="col-md-5 mb-4">
            <div class="card bg-dark text-white border-0 shadow-lg rounded-4 h-100 hover-effect">
                <div class="card-body text-center p-5">
                    <i class="bi bi-people-fill display-3 text-info mb-4"></i>
                    <h4 class="card-title mb-3">Employees</h4>
                    <p class="card-text">View, add, and manage employees with ease.</p>
                    <a href="/Employee/Index" class="btn btn-outline-info rounded-pill mt-3 px-4 py-2">Go to Employees</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hover-effect:hover {
        transform: scale(1.03);
        transition: 0.3s ease;
    }
</style>
