@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-5">
    <div class="card shadow rounded border-warning">
        <div class="card-header bg-warning text-white">
            <h3><i class="bi bi-pencil-square"></i> Edit Employee</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="bi bi-person"></i> Name
                    </label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label fw-bold">
                        <i class="bi bi-123"></i> Age
                    </label>
                    <input asp-for="Age" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="bi bi-envelope"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">
                        <i class="bi bi-geo-alt"></i> Address
                    </label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">
                        <i class="bi bi-telephone"></i> Phone
                    </label>
                    <input asp-for="Phone" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label fw-bold">
                        <i class="bi bi-cash"></i> Salary
                    </label>
                    <input asp-for="Salary" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="HiringDate" class="form-label fw-bold">
                        <i class="bi bi-calendar-event"></i> Hiring Date
                    </label>
                    <input asp-for="HiringDate" class="form-control" type="date" />
                </div>

                <div class="mb-3">
                    <label asp-for="CreateAt" class="form-label fw-bold">
                        <i class="bi bi-calendar-event"></i> CreateAt
                    </label>
                    <input asp-for="CreateAt" class="form-control" type="date" />
                </div>

                <!-- 🔽 قسم اختيار القسم -->
                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label fw-bold d-flex align-items-center text-dark">
                        <i class="bi bi-diagram-3-fill me-2"></i>
                        @Html.DisplayNameFor(m => m.DepartmentId)
                    </label>

                    <select asp-for="DepartmentId" class="form-select" asp-items="@(ViewData["DepartmentList"] as SelectList)">
                        <option value="">-- Select Department --</option>
                    </select>

                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-bold">
                        <i class="bi bi-check-circle"></i> Active
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
                    <label asp-for="IsDeleted" class="form-check-label fw-bold">
                        <i class="bi bi-trash"></i> Deleted
                    </label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidationSection {
    <partial name="_ValidationScriptsPartial" />
}
