@model Employee
@{
    ViewData["Title"] = "Delete";
}


<div class="container mt-5">
    <div class="card shadow rounded border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-trash3"></i> Delete Employee</h3>
        </div>
        <div class="card-body">
            <h5 class="mb-4 text-danger">Are you sure you want to delete this employee?</h5>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="bi bi-person"></i> Name
                    </label>
                    <input asp-for="Name" class="form-control bg-light" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label fw-bold">
                        <i class="bi bi-123"></i> Age
                    </label>
                    <input asp-for="Age" class="form-control bg-light" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="bi bi-envelope"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control bg-light" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">
                        <i class="bi bi-geo-alt"></i> Address
                    </label>
                    <input asp-for="Address" class="form-control bg-light" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">
                        <i class="bi bi-telephone"></i> Phone
                    </label>
                    <input asp-for="Phone" class="form-control bg-light" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label fw-bold">
                        <i class="bi bi-cash"></i> Salary
                    </label>
                    <input asp-for="Salary" class="form-control bg-light" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="HiringDate" class="form-label fw-bold">
                        <i class="bi bi-calendar-event"></i> Hiring Date
                    </label>
                    <input asp-for="HiringDate" class="form-control bg-light" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="CreateAt" class="form-label fw-bold">
                        <i class="bi bi-calendar-event"></i> Hiring Date
                    </label>
                    <input asp-for="CreateAt" class="form-control bg-light" readonly />
                </div>
                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
                    <label asp-for="IsActive" class="form-check-label fw-bold">
                        <i class="bi bi-check-circle"></i> Active
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsDeleted" class="form-check-input" type="checkbox" disabled />
                    <label asp-for="IsDeleted" class="form-check-label fw-bold">
                        <i class="bi bi-trash"></i> Deleted
                    </label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
