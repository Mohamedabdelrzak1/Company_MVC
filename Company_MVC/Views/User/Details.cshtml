@model UserToReturnDto

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="card shadow rounded border-info">
        <div class="card-header bg-info text-white">
            <h3><i class="bi bi-eye"></i> User Details</h3>
        </div>
        <div class="card-body">

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-person-bounding-box"></i> UserName
                </label>
                <input class="form-control bg-light" value="@Model.UserName" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-person"></i> First Name
                </label>
                <input class="form-control bg-light" value="@Model.FirstName" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-person"></i> Last Name
                </label>
                <input class="form-control bg-light" value="@Model.LastName" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-envelope"></i> Email
                </label>
                <input class="form-control bg-light" value="@Model.Email" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-person-gear"></i> Roles
                </label>
                <div>
                    @if (Model.Roles != null && Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-secondary me-1">@role</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash3-fill"></i> Delete
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back To List
                </a>
            </div>
        </div>
    </div>
</div>
