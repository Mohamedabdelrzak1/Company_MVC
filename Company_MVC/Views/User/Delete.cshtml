@model UserToReturnDto
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow rounded border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-trash3"></i> Delete Employee</h3>
        </div>
        <div class="card-body">
            <h5 class="mb-4 text-danger">Are you sure you want to delete this employee?</h5>

            <form asp-action="Delete" method="post">
                @* يجب تحديد method="post" *@

                <input type="hidden" asp-for="Id" />

                <dl class="row">
                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@Model.UserName</dd>

                   

                    <dt class="col-sm-3">First Name</dt>
                    <dd class="col-sm-9">@Model.FirstName</dd>

                    <dt class="col-sm-3">Last Name</dt>
                    <dd class="col-sm-9">@Model.LastName</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Roles</dt>
                    <dd class="col-sm-9">
                        @if (Model.Roles != null)
                        {
                            foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-secondary me-1">@role</span>
                            }
                        }
                    </dd>
                </dl>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
