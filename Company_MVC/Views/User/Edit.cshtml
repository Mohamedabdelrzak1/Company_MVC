@model UserToReturnDto

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <div class="card shadow rounded border-warning">
        <div class="card-header bg-warning text-white">
            <h3><i class="bi bi-pencil-square"></i> Edit User</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-bold">
                        <i class="bi bi-person-bounding-box"></i> Username
                    </label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold">
                        <i class="bi bi-person"></i> First Name
                    </label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label fw-bold">
                        <i class="bi bi-person"></i> Last Name
                    </label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="bi bi-envelope"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidationSection {
    <partial name="_ValidationScriptsPartial" />
}
