@model RoleToReturnDto

@{
    ViewData["Title"] = "Role Details";
}

<div class="container mt-5">
    <div class="card shadow rounded border-info">
        <div class="card-header bg-info text-white">
            <h3><i class="bi bi-eye"></i> Role Details</h3>
        </div>
        <div class="card-body">

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-key"></i> Role ID
                </label>
                <input class="form-control bg-light" value="@Model.Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">
                    <i class="bi bi-person-badge"></i> Role Name
                </label>
                <input class="form-control bg-light" value="@Model.Name" readonly />
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back To List
                </a>
            </div>
        </div>
    </div>
</div>
