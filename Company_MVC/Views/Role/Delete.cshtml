@model RoleToReturnDto

@{
    ViewData["Title"] = "Delete Role";
}

<div class="container mt-5">
    <div class="card shadow rounded border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-trash3"></i> Delete Role</h3>
        </div>
        <div class="card-body">
            <h5 class="mb-4 text-danger">Are you sure you want to delete this role?</h5>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="bi bi-person-badge"></i> Role Name
                    </label>
                    <input asp-for="Name" class="form-control bg-light" readonly />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
