
@model IEnumerable<Department>



@{
    ViewData["Title"] = "Index";
}

<div class=" mt-5">
        <div class="card shadow rounded-4">
        <div class="card-body  rounded-4 p-4 mx-auto" style="width: 95%;">
            <div class="d-flex justify-content-between align-items-center mb-3" >

                <h3 class="fw-bold mb-0">All Departments</h3>
               
                <a asp-controller="Department" asp-action="Create" class="btn btn-primary">+ Create Department</a>
                
            </div>
            <br />
@if (Model.Count() > 0)
{
     <table class="table table-hover text-center">
            <thead class="table-dark">
     
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAt</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning text-white">
                            <i class="bi bi-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
                <div class="alert alert-warning d-flex align-items-center gap-2 justify-content-center">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>There is No Department :(</strong>
                </div>

}

