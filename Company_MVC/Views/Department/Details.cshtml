@model Department
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h3><i class="bi bi-info-circle-fill"></i> Department Details</h3>
        </div>
        <div class="card-body">

            <div class="mb-3">
                <label asp-for="Code" class="form-label fw-bold">
                    <i class="bi bi-123"></i> Code
                </label>
                <input asp-for="Code" class="form-control bg-light" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">
                    <i class="bi bi-tag"></i> Name
                </label>
                <input asp-for="Name" class="form-control bg-light" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="CreateAt" class="form-label fw-bold">
                    <i class="bi bi-calendar-event"></i> Created At
                </label>
                <input asp-for="CreateAt" class="form-control bg-light" readonly />
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back To List
                </a>
            </div>
        </div>
    </div>
</div>